" Set One Dark theme as default
colorscheme onedark
set background=dark

set number
set cursorline
set cursorcolumn

" Custom colors for cursor line and column
highlight CursorLine   cterm=NONE ctermbg=235 ctermfg=NONE guibg=#2c2c2c guifg=NONE
highlight CursorColumn cterm=NONE ctermbg=235 ctermfg=NONE guibg=#2c2c2c guifg=NONE

" Make the cursor line and column more subtle
highlight CursorLineNr cterm=NONE ctermbg=235 ctermfg=245 guibg=#2c2c2c guifg=#8a8a8a
